<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/itemFeedImageView"
                android:layout_width="450dp"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/myfeeddefaultpic"
                android:contentDescription="TODO" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/itemFeedTitletextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/feed_title"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemFeedDescTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/feed_description" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
